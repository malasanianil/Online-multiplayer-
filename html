<body>

    <div id="lobby">
        <div class="card">
            <h2 id="conn-state">Initializing...</h2>
            <div id="host-zone">
                <p>Your Game ID: <b id="my-id" style="color:var(--p2); font-size:1.4rem;">...</b></p>
                <small>Send this to your friend</small>
            </div>
            <hr style="margin:20px; border:0; border-top:1px solid #333">
            <input type="text" id="join-id" placeholder="Paste Friend's ID here">
            <button onclick="connectToPeer()">JOIN GAME</button>
        </div>
    </div>

    <div id="main-game">
        <div id="game-area">
            <div id="status">CONNECTING...</div>
            <canvas id="board" width="500" height="500"></canvas>
            <div class="controls">
                <button id="rollBtn" onclick="sendRoll()" disabled>ROLL DICE</button>
                <div id="diceVal">ðŸŽ²</div>
            </div>
        </div>

        <div id="chat-container">
            <div style="padding:10px; background:#1a1a2e; border-radius:8px 8px 0 0; font-weight:bold; font-size:0.8rem;">RACER CHAT</div>
            <div id="chat-messages"></div>
            <div id="chat-input-area">
                <input type="text" id="chat-input" placeholder="Type a message..." onkeypress="handleChatKey(event)">
            </div>
        </div>
    </div>

<script>
    const canvas = document.getElementById('board');
    const ctx = canvas.getContext('2d');
    const peer = new Peer();
    let conn;
    let myRole = ""; 

    // --- PEER LOGIC ---
    peer.on('open', id => {
        document.getElementById('my-id').innerText = id;
        document.getElementById('conn-state').innerText = "Ready to Race";
    });

    peer.on('connection', c => {
        conn = c; myRole = "p1"; setupConnection();
    });

    function connectToPeer() {
        const id = document.getElementById('join-id').value;
        conn = peer.connect(id); myRole = "p2"; setupConnection();
    }

    function setupConnection() {
        conn.on('open', () => {
            document.getElementById('lobby').style.display = 'none';
            document.getElementById('status').innerText = (myRole === "p1") ? "YOUR TURN" : "WAITING FOR P1...";
            if(myRole === "p1") document.getElementById('rollBtn').disabled = false;
            draw();
            addChatMessage("System", "Connected! Start racing.", "them");
        });

        conn.on('data', data => {
            if(data.type === 'roll') syncRoll(data.val);
            if(data.type === 'chat') addChatMessage("Rival", data.msg, "them");
        });
    }

    // --- CHAT LOGIC ---
    function handleChatKey(e) {
        if(e.key === 'Enter') {
            const input = document.getElementById('chat-input');
            const msg = input.value.trim();
            if(msg && conn) {
                conn.send({ type: 'chat', msg: msg });
                addChatMessage("You", msg, "me");
                input.value = '';
            }
        }
    }

    function addChatMessage(sender, msg, type) {
        const container = document.getElementById('chat-messages');
        const div = document.createElement('div');
        div.className = `msg msg-${type}`;
        div.innerText = msg;
        container.appendChild(div);
        container.scrollTop = container.scrollHeight;
    }

    // --- GAME LOGIC ---
    let players = [{ pos: 0, color: '#ff0055', icon: 'ðŸŽï¸' }, { pos: 0, color: '#00ff88', icon: 'ðŸš™' }];
    let currentPlayer = 0;
    const snakes = { 98: 10, 70: 30, 45: 5 };
    const ladders = { 2: 38, 15: 46, 50: 91 };

    function sendRoll() {
        const val = Math.floor(Math.random() * 6) + 1;
        conn.send({ type: 'roll', val: val });
        syncRoll(val);
    }

    async function syncRoll(val) {
        const btn = document.getElementById('rollBtn');
        const dice = document.getElementById('diceVal');
        btn.disabled = true;
        dice.classList.add('rolling');
        await new Promise(r => setTimeout(r, 600));
        dice.innerText = val;
        dice.classList.remove('rolling');

        let p = players[currentPlayer];
        for(let i=0; i<val; i++) {
            if(p.pos < 100) { p.pos++; draw(); await new Promise(r => setTimeout(r, 200)); }
        }

        if(ladders[p.pos]) { p.pos = ladders[p.pos]; addChatMessage("System", "BOOST!", "them"); }
        if(snakes[p.pos]) { p.pos = snakes[p.pos]; addChatMessage("System", "SLIP!", "them"); }
        
        draw();
        currentPlayer = 1 - currentPlayer;
        const nextRole = (currentPlayer === 0) ? "p1" : "p2";
        document.getElementById('status').innerText = (myRole === nextRole) ? "YOUR TURN" : "WAITING...";
        btn.disabled = (myRole !== nextRole);
    }

    function getCoords(pos) {
        if (pos <= 0) return { x: 25, y: 475 };
        let r = Math.floor((pos - 1) / 10), c = (pos - 1) % 10;
        if (r % 2 !== 0) c = 9 - c;
        return { x: c * 50 + 25, y: 475 - (r * 50) };
    }

    function draw() {
        ctx.clearRect(0,0,500,500);
        for(let i=0; i<100; i++) {
            let r=Math.floor(i/10), c=i%10;
            ctx.fillStyle = (r+c)%2==0 ? '#111' : '#0a0a0c';
            ctx.fillRect(c*50, r*50, 50, 50);
        }
        players.forEach((p, i) => {
            let c = getCoords(p.pos);
            ctx.font = "24px Arial"; ctx.textAlign="center";
            ctx.fillText(p.icon, c.x, c.y + (i*4));
        });
    }
    draw();
</script>
</body>
</html>
